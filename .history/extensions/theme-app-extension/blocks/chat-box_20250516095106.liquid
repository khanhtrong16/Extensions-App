<div class="chat-widget">
  <div class="chat-icon">
    <img src="https://cdn.shopify.com/s/files/1/0/0/0/0000/files/chat-icon.png" alt="Chat" onerror="this.src='https://cdn.shopify.com/s/assets/no-image-2048-5e88c1b20e087fb7bbe9a3771824e743c244f437e4f8ba93bbf7b11b53f7824c_100x100.gif'">
  </div>
  <div class="chat-box">
    <div class="chat-header">
      <h3>Hỗ trợ khách hàng</h3>
      <span class="close-chat">&times;</span>
    </div>
    <div class="chat-body">
      <p>Xin chào! Chúng tôi có thể giúp gì cho bạn?</p>
      <p class="bot-message">Vui lòng để lại tin nhắn, chúng tôi sẽ liên hệ lại sớm.</p>
    </div>
    <div class="chat-footer">
      <input type="text" placeholder="Nhập tin nhắn..." disabled>
      <button disabled>Gửi</button>
    </div>
  </div>
</div>

<style>
  .chat-widget {
    position: fixed;
    bottom: 20px;
    right: 20px;
    z-index: 9999;
    font-family: Arial, sans-serif;
  }
  
  .chat-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: #0078ff;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
  }
  
  .chat-icon:hover {
    transform: scale(1.1);
  }
  
  .chat-icon img {
    width: 35px;
    height: 35px;
    object-fit: contain;
    filter: brightness(0) invert(1);
  }
  
  .chat-box {
    position: absolute;
    bottom: 70px;
    right: 0;
    width: 300px;
    background-color: white;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
    overflow: hidden;
    display: none;
  }
  
  .chat-header {
    background-color: #0078ff;
    color: white;
    padding: 10px 15px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .chat-header h3 {
    margin: 0;
    font-size: 16px;
  }
  
  .close-chat {
    cursor: pointer;
    font-size: 20px;
  }
  
  .chat-body {
    padding: 15px;
    max-height: 250px;
    overflow-y: auto;
  }
  
  .chat-body p {
    margin: 0 0 10px;
    line-height: 1.5;
  }
  
  .bot-message {
    background-color: #f1f1f1;
    padding: 10px;
    border-radius: 10px;
  }
  
  .chat-footer {
    display: flex;
    padding: 10px;
    border-top: 1px solid #eee;
  }
  
  .chat-footer input {
    flex: 1;
    padding: 8px;
    border: 1px solid #ddd;
    border-radius: 20px;
    margin-right: 5px;
  }
  
  .chat-footer button {
    border: none;
    background-color: #0078ff;
    color: white;
    padding: 8px 15px;
    border-radius: 20px;
    cursor: pointer;
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const chatIcon = document.querySelector('.chat-icon');
    const chatBox = document.querySelector('.chat-box');
    const closeChat = document.querySelector('.close-chat');
    
    chatIcon.addEventListener('click', function() {
      chatBox.style.display = chatBox.style.display === 'block' ? 'none' : 'block';
    });
    
    closeChat.addEventListener('click', function() {
      chatBox.style.display = 'none';
    });
  });
</script>

{% schema %}
  {
    "name": "Chat Box",
    "target": "section",
    "settings": [
      {
        "type": "image_picker",
        "id": "chat_icon",
        "label": "Chat Icon"
      },
      {
        "type": "text",
        "id": "header_text",
        "label": "Header Text",
        "default": "Hỗ trợ khách hàng"
      },
      {
        "type": "text",
        "id": "greeting_message",
        "label": "Greeting Message",
        "default": "Xin chào! Chúng tôi có thể giúp gì cho bạn?"
      }
    ]
  }
{% endschema %}